#!/bin/sh
file="$(xdg-user-dir PICTURES)/Screenshots/$(date +'Screenshot %y-%m-%d %X.png')"
case "$1" in
        s) grim -g "$(slurp)" - | wl-copy ; exit;;
        f) grim - | wl-copy ; exit;;
        ss) grim -g "$(slurp)" "$file";;
        fs) grim "$file";;
        ds) grim -g "$(slurp)" - | swappy -f - ; exit;;
        df) grim - | swappy -f - ; exit;;
        *) exit;;
esac
notify-send -i "$file" "Screenshot saved"
