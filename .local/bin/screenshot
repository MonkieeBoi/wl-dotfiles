#!/bin/sh
file="$(xdg-user-dir PICTURES)/Screenshots/$(date +'Screenshot %y-%m-%d %X.png')"
hyprpicker -rz &
picker_pid=$!
case "$1" in
        s) grim -g "$(slurp)" - | wl-copy;;
        f) grim - | wl-copy;;
        ss) grim -g "$(slurp)" "$file";;
        fs) grim "$file";;
        ds) grim -g "$(slurp)" - | swappy -f - &;;
        df) grim - | swappy -f - &;;
esac
kill $picker_pid
[ -f "$file" ] && notify-send -i "$file" "Screenshot saved"
